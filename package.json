{
  "name": "recipe_menu_app",
  "version": "1.0.0",
  "description": "Planner for week menus",
  "main": "index.js",
  "scripts": {
    "front-end": "npm start --prefix ./front-end",
    "back-end": "nodemon ./back-end/bin/www",
